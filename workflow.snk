########################################################################################################################
#                                               ~~~ Workflow ~~~                                                       #
########################################################################################################################

SPLITS = ["Training", "Testing"]
DATASETS = ["PALM", "ODIR"]

rule preprocess:
     input:
        expand("../data/raw/{dataset}_{split}_Images/", split=SPLITS, dataset=DATASETS)
     conda:
        "../retinn_env.yaml"
     output:
        expand("../data/processed/{dataset}_{split}_Images/", split=SPLITS, dataset=DATASETS)
     script:
        "utils/preprocessing.py {input} {output}"



